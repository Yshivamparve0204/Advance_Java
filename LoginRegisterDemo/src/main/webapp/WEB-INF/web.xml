<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>LoginRegisterDemo</display-name>
  <welcome-file-list>
    <welcome-file>register.html</welcome-file>
   
  </welcome-file-list>
  <servlet>
	  <servlet-name>register</servlet-name>
	  <servlet-class>com.demo.servlets.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
	  <servlet-name>register</servlet-name>
	  <url-pattern>/registerationform</url-pattern>
  </servlet-mapping>
  
  <servlet>
	  <servlet-name>login</servlet-name>
  	  <servlet-class>com.demo.servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
	  <servlet-name>login</servlet-name>
  	  <url-pattern>/loginform</url-pattern>
  </servlet-mapping>
  
  <servlet>
	  <servlet-name>forgotpass</servlet-name>
	  <servlet-class>com.demo.servlets.ForgotPassword</servlet-class>
  </servlet>
  <servlet-mapping>
	   <servlet-name>forgotpass</servlet-name>
	   <url-pattern>/findquestion</url-pattern>
  </servlet-mapping>
  <servlet>
	   <servlet-name>changepass</servlet-name>
       <servlet-class>com.demo.servlets.ChangePasswordServlet</servlet-class>
       </servlet>
  <servlet-mapping>
	  <servlet-name>changepass</servlet-name>
       <url-pattern>/changepassword</url-pattern>
   </servlet-mapping>
  
</web-app>